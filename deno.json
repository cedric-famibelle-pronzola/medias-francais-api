{
  "tasks": {
    "start": "deno run main.ts",
    "dev": "deno run --watch --allow-read --allow-net main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check"
  },
    "lint": {
    "rules": {
      "include": ["no-console"]
    }
  },
  "fmt": {
    "singleQuote": true,
    "indentWidth": 2,
    "trailingCommas": "never"
  }
}
