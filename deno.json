{
  "tasks": {
    "start": "deno run main.ts",
    "dev": "deno run --watch --allow-read --allow-net main.ts",
    "build": "deno run --env-file --allow-env --allow-net --allow-write --allow-read build.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check"
  },
  "lint": {
    "rules": {
      "include": ["no-console"]
    }
  },
  "fmt": {
    "singleQuote": true,
    "indentWidth": 2,
    "trailingCommas": "never"
  },
  "imports": {
    "papaparse": "npm:papaparse@^5.5.3"
  }
}
