{
  "tasks": {
    "start": "deno run --env-file --allow-read --allow-write --allow-net --allow-ffi --allow-env main.ts",
    "dev": "deno run --env-file --watch --allow-read --allow-write --allow-net --allow-ffi --allow-env main.ts",
    "build": "deno run --env-file --allow-env --allow-net --allow-write --allow-read build.ts",
    "build:ci": "deno run --allow-env --allow-net --allow-write --allow-read build.ts",
    "enrich": "deno run --allow-read --allow-write enrich.ts",
    "test": "deno test --allow-read --allow-env tests/",
    "test:watch": "deno test --watch --allow-read --allow-env tests/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check"
  },
  "lint": {
    "rules": {
      "include": ["no-console"]
    }
  },
  "fmt": {
    "singleQuote": true,
    "indentWidth": 2,
    "trailingCommas": "never"
  },
  "imports": {
    "@duckdb/node-api": "npm:@duckdb/node-api@^1.4.2-r.1",
    "@hono/hono": "jsr:@hono/hono@^4.10.6",
    "@hono/swagger-ui": "jsr:@hono/swagger-ui@^0.5.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.1.3",
    "papaparse": "npm:papaparse@^5.5.3"
  }
}
